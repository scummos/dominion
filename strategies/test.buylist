buylists
	list if AnyOf(SupplyHasLess(Province, 2), SupplyEmptyPilesGreater(1))
		Province, Duchy, Estate
	end
	list if SupplyHasLess(Province, 4)
		Province, Duchy
	end
	list
			Province if Has(Gold, 1),
			Gold,
			Embassy if HasExact(Embassy, 0),
			Smithy if HasExact(Smithy, 0),
			Silver
	end
end

strategies
	strategy
		playorder :Default end
		reactions for TorturerAttack if HasInHand(Estate, 1)
			choose (option 1),
			discard (Estate, Curse, Copper)
		end
	end
end
