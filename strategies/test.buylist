buylists
    list if AnyOf(SupplyHasLess(Province, 2), SupplyEmptyPilesGreater(1))
        Province, Duchy, Estate
    end
    list if SupplyHasLess(Province, 4)
        Province, Duchy
    end
    list
        Province if Has(Gold, 1),
        Gold,
        Remodel if not Has(Remodel, 1),
        Smithy if not Has(Smithy, 1),
        Silver
    end
end

strategies
    strategy if SupplyHasLess(Province, 3)
        playorder Remodel end
        options for Remodel
            Gold -> Province
        end
    end
    strategy if AllOf(SupplyHasLess(Province, 3), Not(HasMoneyInHand(8)))
        playorder Remodel end
        options for Remodel
            Silver -> Duchy
        end
    end
    strategy
        playorder Remodel Smithy end
        options for Remodel
            Estate -> Silver
        end
    end
    strategy
        playorder :Default end
        options for IllGottenGains
            choose optional
        end
    end
end
